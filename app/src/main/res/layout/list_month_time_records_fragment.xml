<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">


    <GridLayout
        android:id="@+id/footview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/teal"
        android:columnCount="2"
        android:focusableInTouchMode="true"
        android:paddingBottom="@dimen/footer_bottom_padding"
        android:paddingLeft="@dimen/fragment_horizontal_padding"
        android:paddingRight="@dimen/fragment_horizontal_padding"
        android:paddingTop="@dimen/footer_top_padding"
        android:rowCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:gravity="center"
            android:text="@string/label_foot_total"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_total_time"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_row="0"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:text="@string/label.counttime"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_count_time"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_row="1"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </GridLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="16dp" />

    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/footview"
        android:layout_below="@id/spinner" />


</RelativeLayout>